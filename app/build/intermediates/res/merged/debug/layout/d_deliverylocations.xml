<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="fill_parent"
        android:id="@+id/delLocations"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp">
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/a"
            android:text="Stuart Building"
            android:background="@drawable/listbg"
            android:layout_marginBottom="2dp" />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b"
            android:text="Life Sciences"
            android:background="@drawable/listbg"
            android:layout_marginBottom="2dp" />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/c"
            android:text="Engineering I"
            android:background="@drawable/listbg"
            android:layout_marginBottom="2dp" />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/d"
            android:text="Siegel Hall"
            android:background="@drawable/listbg"
            android:layout_marginBottom="2dp" />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/e"
            android:text="Perlstein Hall"
            android:background="@drawable/listbg"
            android:layout_marginBottom="2dp" />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f"
            android:text="IIT Tower"
            android:background="@drawable/listbg"
            android:layout_marginBottom="2dp" />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/g"
            android:text="Crown Hall"
            android:background="@drawable/listbg"
            android:layout_marginBottom="2dp" />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/h"
            android:text="Wishnick Hall"
            android:background="@drawable/listbg"
            android:layout_marginBottom="2dp" />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/i"
            android:text="Hermann Hall"
            android:background="@drawable/listbg"
            android:layout_marginBottom="2dp" />

    </RadioGroup>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Confirm Delivery"
            android:id="@+id/confDelLocBtn"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn"
            android:backgroundTint="#CC0000"
            android:foregroundGravity="bottom"/>
    </RelativeLayout>
</LinearLayout><!-- From: file:/C:/Users/shara/Desktop/CafeteriaApp_Team_12_Final/app/src/main/res/layout/d_deliverylocations.xml -->