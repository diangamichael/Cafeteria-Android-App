<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="bottom|center_horizontal"
tools:context="skallaje.cafeteria_app.cs442.com.ForgotPassword">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/coffeebeans"
    android:layout_marginTop="-120dp"
    android:layout_marginBottom="-100dp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:width="300dp"
    android:id="@+id/emailid"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true" />

<Button
    android:layout_height="30dp"
    android:textColor="#FFFFFF"
    android:background="@drawable/btn"
    android:backgroundTint="#CC0000"
    android:layout_width="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:text="SEND SMS"
    android:id="@+id/button8"
    android:onClick="sendSMS"
    android:layout_below="@+id/emailid"
    android:layout_alignParentLeft="true" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center_horizontal">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/iitchicagologo"
        android:layout_marginBottom="20dp"
        android:baselineAlignBottom="false" />
</LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/shara/Desktop/CafeteriaApp_Team_12_Final/app/src/main/res/layout/activity_forgot_password.xml -->