
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="bottom|center_horizontal"
tools:context="skallaje.cafeteria_app.cs442.com.ChangePasswordActivity">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/coffeebeans"
    android:layout_marginTop="-120dp"
    android:layout_marginBottom="-100dp" />

<EditText
    android:inputType="textPassword"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:hint="New Password"
    android:id="@+id/c_pass"
    android:textColor="#00ff00"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:inputType="textPassword"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:hint="Confirm Password"
    android:id="@+id/cc_pass"
    android:textColor="#00ff00"
    android:layout_below="@+id/c_pass"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="20dp"/>

<Button
    android:layout_height="30dp"
    android:textColor="#FFFFFF"
    android:background="@drawable/btn"
    android:backgroundTint="#CC0000"
    android:layout_width="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:text="CHANGE PASSWORD"
    android:id="@+id/button7"
    android:onClick="changePassword"
    android:layout_below="@+id/cc_pass"
    android:layout_alignParentLeft="true" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center_horizontal">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/iitchicagologo"
        android:layout_marginBottom="20dp"
        android:baselineAlignBottom="false" />
</LinearLayout>
